@model AccountViewModel

<div class="form-group">
    @Html.LabelFor(m => m.Category.Type, new { @class = "col-sm-5 control-label" })
    <div class="col-sm-7">
        <div class="form-control-static">
            @Model.Category.TypeDisplayName
        </div>
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.CustomerId, new { @class = "col-sm-5 control-label" })
    <div class="col-sm-7">
        <div class="form-control-static">
            @Model.Customer.FullName
        </div>
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Title, new { @class = "col-sm-5 control-label" })
    <div class="col-sm-7">
        <div class="form-control-static">
            @Model.Title
        </div>
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Number, new { @class = "col-sm-5 control-label" })
    <div class="col-sm-7">
        <div class="form-control-static">
            @Model.Number
        </div>
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Balance, new { @class = "col-sm-5 control-label" })
    <div class="col-sm-7">
        <div class="form-control-static">
            @Html.DisplayFor(m => m.Balance, "Currency")
        </div>
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.LastSync, new { @class = "col-sm-5 control-label" })
    <div class="col-sm-7">
        <div class="form-control-static">
            @(((Model.LastSync.HasValue) ? Model.LastSync.Value : DateTime.Now).ToString("G"))
        </div>
    </div>
</div>