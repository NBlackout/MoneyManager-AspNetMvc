@model UpdatePasswordViewModel

<div class="form-group @((!ViewData.ModelState.IsValidField("OldPassword")) ? "has-error" : "")">
    @Html.LabelFor(m => m.OldPassword, new { @class = "col-sm-4 control-label" })
    <div class="col-sm-8">
        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.OldPassword, null, new { @class = "help-block" })
    </div>
</div>
<div class="form-group @((!ViewData.ModelState.IsValidField("Password")) ? "has-error" : "")">
    @Html.LabelFor(m => m.Password, new { @class = "col-sm-4 control-label" })
    <div class="col-sm-8">
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password, null, new { @class = "help-block" })
    </div>
</div>
<div class="form-group @((!ViewData.ModelState.IsValidField("PasswordConfirmation")) ? "has-error" : "")">
    @Html.LabelFor(m => m.PasswordConfirmation, new { @class = "col-sm-4 control-label" })
