@model CustomerViewModel

<div class="form-group @((!ViewData.ModelState.IsValidField("FirstName")) ? "has-error" : "")">
    @Html.LabelFor(m => m.FirstName, new { @class = "col-sm-3 control-label" })
    <div class="col-sm-9">
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.FirstName, null, new { @class = "help-block" })
    </div>
</div><div class="form-group @((!ViewData.ModelState.IsValidField("LastName")) ? "has-error" : "")">
    @Html.LabelFor(m => m.LastName, new { @class = "col-sm-3 control-label" })
    <div class="col-sm-9">
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.LastName, null, new { @class = "help-block" })
    </div>
</div>